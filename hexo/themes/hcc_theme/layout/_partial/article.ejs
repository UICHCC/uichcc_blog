<div class="blog-post">
    <!-- Title -->
    <h2 class="blog-post-title">
        <a href="<%- config.root %><%- post.path %>">
            <%- post.title %>
        </a>
    </h2>
    <!-- Date and Author -->
    <p class="blog-post-meta">
        <%= post.date.format(config.date_format) %>
            <% if(post.author) { %>
                by
                <%- post.author %>
                    <% } %>
    </p>
    <!-- Content -->
    <%- post.content %>
</div>